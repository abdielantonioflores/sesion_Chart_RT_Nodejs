<style>
  .islogout {
  color: red;
  text-decoration: none;
}
.islogout:hover{
  color: #ffffff;
  text-decoration: none;
}
</style>
<div>
  <div>
    <nav class="navbar navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Admin</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <!-- controller data  -->
        <div ng-controller="ctrl_data as   $ctrl">
          <button type="button" class="btn btn-outline-primary m-3" data-toggle="modal" data-target="#createNewData"
            ng.click="selectDataDB(this.name)">New
            Data</button>
          <button class="btn btn-outline-success my-2 my-sm-0 m-3" type="submit" ng-click="modal(null,null,null,null,true)">Create</button>
          <button class="btn btn-outline-danger my-2 my-sm-0" type="submit"><a class="islogout" href="/logout">Cerrar
              sesion
              <%= user.name%></a></button>

          <!-- modal principal  -->
          <div class="modal " id="createNewData" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
            aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
              <div class="modal-content shadow">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle"> Options </h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <div class="row">
                    <div class="col-8">
                      <!-- select  de toda la data  -->
                      <form name="myForm" onsubmit="this.reset(); ">
                        <select class="form-control form-control" ng-options="name.name  for name in Cdata  " ng-model="namecurrent"
                          ng-init="namecurrent" ng-Change=" selectDataDB()">
                        </select>
                        <hr>
                        <div class=" mt-3  ">
                          <div ui-grid="gridOptions" ui-grid-selection ui-grid-edit class="grid" name="cell"></div>
                        </div>
                        <div class="col-4 mt-3">
                          <button id="saveDataChart" class="btn-block" disabled ng-click="btnAddData()"> Save</button>
                        </div>
                    </div>
                    <div class=" col-4 ">
                      <button class=" btn-block" data-toggle="modal" data-target="#OptionChart"><b>New
                          Chart </b> </button>
                      <hr class="mt-4">
                      <div class="mt-3">
                        <button class=" btn-block " ng-click=" Add()"><b>New
                            Fila </b> </button>
                        <i class="text-danger" id="addErr"></i>
                      </div>
                    </div>
                    </form>
                    <!-- modal para crear un nuevo chart  -->
                    <div class="modal fade" id="OptionChart" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                      aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content" style="background-color: #f0f0f0!important;">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Create new Chart</h5>
                          </div>
                          <div class="modal-body">
                            <!-- formulario de ingreso de nuevo chart  -->
                            <form name="myForm" id="Form_add">
                              <div class="form-row">
                                <div class="col-7">
                                  <input class="form-control" id="nameChart" name="nameChart" placeholder="name"
                                    ng-model="nameChart" required>
                                  <span class="text-danger" ng-show="myForm.nameChart.$touched && myForm.nameChart.$invalid">
                                    The name isrequired.</span>
                                </div>
                                <div class="col-7 mt-3">
                                  <input type="number" id="levelChart" name="levelChart" ng-model="levelChart" class="form-control"
                                    placeholder="level" required>
                                  <span class="text-danger" ng-show="myForm.levelChart.$touched && myForm.levelChart.$invalid">
                                    The level is required.</span>
                                </div>
                                <div class="col-7 mt-3">
                                  <input type="text" id="ValueChart" name="ValueChart" ng-model="ValueChart" class="form-control"
                                    placeholder="value" required>
                                  <span class="text-danger" ng-show="myForm.ValueChart.$touched && myForm.ValueChart.$invalid">
                                    The value is required.</span>
                                </div>
                                <div class="container col  ">
                                  <input class=" btn btn-dark btn-block mt-3 center" type="button" value="Save"
                                    ng-click="btnNewChart()">
                                  <i class="text-danger" id="MessageErr"></i>
                                </div>
                              </div>
                            </form>

                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>
          <% include ./modaloptiondata%>
        </div>
      </div>
    </nav>
  </div>
</div>