  crossorigin="anonymous"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
<link rel="stylesheet" href="style.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.2/angular.min.js"></script>
<script src="./angular/app.js"></script>
<script src="./angular/controller/controller-data.js"></script>
<%include ./partials/bootstrap %>

<body ng-app="miapp">
  <div ng-controller="ctrl">

     
      <table id="table_id" class="display "  >
        <thead>
          <tr>
            <th>Id- ({{ res.cuantos }})</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Google</th>
            <th>Estado</th>
            <th>Roler</th>
            <th>Opciones</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="x in res.usuarios">
            <td>{{x._id}}</td>
            <td>{{x.nombre}}</td>
            <td>{{x.email}}</td>
            <td>{{x.google}}</td>
            <td>{{x.estado}}</td>
            <td>{{x.role}}</td>
            <td><i ng-click="modal(x._id , x.nombre , x.email)" class="fa  fa-cogs"></i></td>

          </tr>
        </tbody>
      </table>

      <div>
          <a href="/"><i class="fa fa-angle-double-left size"></i></a>
        </div>
  <!-- Modal -->
  <div class="modal fade" id="options" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">  Usuario <i class="text-primary">{{nombre}}</i></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <div class="card">
                <div class="card-body">
                 <li> Id: {{_id}}</li>
                 <li>Nombre: {{nombre}}</li>
                 <li>Email: {{email}}</li>
                </div>
              </div>
              
        </div>
        <div class="modal-footer">          
            <button class="btn btn-warning">Eliminar</button>
            <button class="btn btn-danger "  data-toggle="modal" data-target="#actualizar" class="close" data-dismiss="modal" aria-label="Close">Actualizar</button>
        </div>
      </div>
    </div>
  </div>
<!-- actualizar campos  -->
  <div class="modal fade" id="actualizar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">  Usuario <i class="text-primary">{{nombre}}</i></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
                <form action="/Usuario/?{_id}" method="PUT">
                      <div class="form-row">
                        <div class="col">
                          <input type="text" class="form-control" name="nombre" placeholder="First name" value={{nombre}}>
                        </div>
                        <div class="col">
                          <input type="text" class="form-control"  name="nombre" placeholder="Ingrese Nuevo Nombre ">
                        </div>
                      </div>
                      <input class="btn btn-warning btn-block" type="submit" />
                    </form>         
          </div>
          <div class="modal-footer">          
              
          </div>
        </div>
      </div>
    </div>
    

</body>